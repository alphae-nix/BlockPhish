{
  "manifest_version": 3,
  "name": "phishdetector",
  "version": "0.1",

  "background": {
    "service_worker": "background.js"
  },
    
  "permissions": ["storage", "activeTab", "scripting"],
    
  "action": {
    "default_icon": {
      "16": "/images/phishing1.png",
      "32": "/images/phishing2.png",
      "48": "/images/phishing3.png",
      "128": "/images/phishing4.png"
    },
    "default_popup": "popup.html"
  },
    
  "icons": {
    "16": "/images/phishing1.png",
    "32": "/images/phishing2.png",
    "48": "/images/phishing3.png",
    "128": "/images/phishing4.png"
  }
}